{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "max-len": ["error", 100],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2],
    "import/order": 0,
    "no-trailing-spaces": 1,
    "no-param-reassign": 0,
    "arrow-body-style": 0,
    "no-undef": 0,
    "class-methods-use-this": 0,
    "no-useless-escape": 0,
    "camelcase": 0
  }
}
